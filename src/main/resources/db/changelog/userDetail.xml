<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="alexstr">

        <createTable tableName="user_details">
            <column name="detail_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar">
                <constraints nullable="false" />
            </column>
            <column name="age" type="number">
                <constraints nullable="false" />
            </column>
            <column name="gender" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_details" baseColumnNames="user_id"
                                 referencedColumnNames="user_id" referencedTableName="users"
                                 constraintName="FK_userDetails_user_id"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="user_details" constraintName="FK_userDetails_user_id"/>
            <dropTable tableName="user_details" />
        </rollback>

    </changeSet>


</databaseChangeLog>